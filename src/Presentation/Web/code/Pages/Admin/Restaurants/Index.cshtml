@page
@using RestFull.Presentation.Web.Helpers
@model RestFull.Presentation.Web.Pages.Admin.Restaurants.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="row mb-3">
    <div class="col-sm-12 col-md-8 col-lg-9">
        <h2 class="text-center w-100 bg-dark rounded text-light">Restaurants</h2>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-3 sticky-top">
        <a asp-page="Create" class="btn btn-primary w-100 ">Create New</a>
    </div>
</div>

<div class="list-group">
        @foreach (var item in Model.Restaurant)
        {
            <a asp-page="./Details" asp-route-id="@item.Id" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@item.Name</h5>
                    <small>@Html.RestaurantStateBadge(item.State)</small>
                </div>
                <p class="mb-1">@item.Description</p>
                <small>@item.Location</small>
            </a>
        }
    </div>

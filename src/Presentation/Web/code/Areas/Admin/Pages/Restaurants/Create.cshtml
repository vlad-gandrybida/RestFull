@page
@model RestFull.Presentation.Web.Pages.Admin.Restaurants.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4 class="text-center">Crate new restaurant</h4>
<hr />
<div class="row">
    <div class="offset-md-3 col-md-6">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <!-- Email -->
        <div class="md-form">
            <label asp-for="Restaurant.Name" class="control-label"></label>
            <input asp-for="Restaurant.Name" class="form-control" />
            <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="md-form">
            <label asp-for="Restaurant.Address" class="control-label"></label>
            <input asp-for="Restaurant.Address" class="form-control" />
            <span asp-validation-for="Restaurant.Address" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn aqua-gradient btn-block my-4">Save</button>
    </form>
    <div class="text-center">
        <a asp-page="./Index">Back to List</a>
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
